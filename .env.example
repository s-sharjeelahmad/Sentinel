# Sentinel Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Required: Groq API Key (get from https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Required: Jina AI API Key (get from https://jina.ai)
JINA_API_KEY=jina_your_jina_api_key_here

# Required: Redis Connection URL
# Local: redis://localhost:6379
# Docker: redis://redis:6379
# Fly.io: redis://default:PASSWORD@fly-sentinel-redis.upstash.io
REDIS_URL=redis://localhost:6379

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Optional: Enable debug endpoints (true/false)
# WARNING: Set to false in production for security
DEBUG_MODE=true

# Optional: Debug API key (protect debug endpoints in production)
# DEBUG_API_KEY=your_secret_debug_key_here
